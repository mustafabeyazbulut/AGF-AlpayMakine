@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">

        <h4 class="card-title">Yeni Kategori Girişi</h4>
        <p class="card-subtitle mb-4">
            Yeni kategori adını girerek kaydedebilirsiniz.
        </p>

        <form method="post">
            <div class="form-group">
                <label for="Category">Kategori</label>
                <input type="text" class="form-control" id="Category" asp-for="Category" placeholder="Kategori Adını giriniz">
            </div>


            <button type="submit" class="btn btn-primary waves-effect waves-light btnConfirm">Kategoriyi Kaydet</button>
        </form>

    </div> <!-- end card-body-->
</div>

