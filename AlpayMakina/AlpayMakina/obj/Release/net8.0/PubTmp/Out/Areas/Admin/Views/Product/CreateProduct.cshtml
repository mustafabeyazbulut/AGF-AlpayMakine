@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="card">
    <div class="card-body">

        <h4 class="card-title">Yeni Ürün Girişi</h4>
        <p class="card-subtitle mb-4">
             Bir ürünün alt Kategorisi var ise Kategori belirtmenize gerek yoktur. Alt Kategorisi olmayan ürünler için Kategori belirtmeniz zorunludur.
        </p>

        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Title">Başlık</label>
                <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Ürün Başlığını giriniz">
            </div>
            <div class="form-group">
                <label for="Price">Fiyat</label>
                <input type="text" class="form-control" id="Price" asp-for="Price" placeholder="Ürün fiyatını giriniz">
            </div> 
            <div class="form-group">
                <label for="Currency">Para Birimi</label>
                <input type="text" class="form-control" id="Currency" asp-for="Currency" placeholder="Para Birimini giriniz">
            </div> 
            <div class="form-group">
                <label for="ImageFile">Ürün Fotoğrafı</label>
                <input type="file" class="form-control" id="ImageFile" asp-for="ImageFile" accept=".jpg, .jpeg, .png" onchange="previewImage(this)">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Ürün Fotoğrafı</label>
                <img id="ImageUrlPreview" class="form-control" style="width:200px;height:200px">
            </div>
            <div class="form-group">
                <label for="CategoryId">Kategorisi</label>
                @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.Category,new {@class="form-control"})
            </div>
            <div class="form-group">
                <label for="SubCategoryId">Alt Kategorisi</label>
                @Html.DropDownListFor(x=>x.SubCategoryId,(List<SelectListItem>)ViewBag.SubCategory,new {@class="form-control"})
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="Feature" asp-for="Feature">
                    <label class="form-check-label" for="Feature">Öne Çıkanlar</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light btnConfirm">Social Media Hesabını Kaydet</button>
        </form>

    </div> <!-- end card-body-->
</div>

<script>
    function previewImage(input) {
        console.log("a");
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#ImageUrlPreview').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>