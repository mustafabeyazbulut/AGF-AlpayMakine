@model CreateSliderDto
@{
    ViewData["Title"] = "CreateSlider";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="card">
    <div class="card-body">

        <h4 class="card-title">Yeni Slayt Girişi</h4>
        <p class="card-subtitle mb-4">
            Yeni slayt ekleme işlemini alt taraftan yapabilirsiniz. Active alanı için sadece bir tane üründe active olarak kayıt olmalıdır. Diğer kayıtlar boş olmalıdır. Maksimum 4 kayıt önerilmektedir.
        </p>

        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="Title">Başlık</label>
                <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Başlık giriniz">
            </div>
            <div class="form-group">
                <label for="Description">Açıklama</label>
                <input type="text" class="form-control" id="Description" asp-for="Description" placeholder="Açıklama giriniz">
            </div>
            <div class="form-group">
                <label for="ProductImageFile">Fotoğfraf</label>
                <input type="file" class="form-control" id="ProductImageFile" asp-for="ProductImageFile" placeholder="Fotoğraf Seçiniz" accept=".jpg, .jpeg, .png" onchange="previewImageProduct(this)">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Ürün Fotoğrafı</label>
                <img id="ImageUrlPreviewProduct" class="form-control" style="width:200px;height:200px">
            </div>
            <div class="form-group">
                <label for="PriceImageFile">Fiyat Fotoğrafı</label>
                <input type="file" class="form-control" id="PriceImageFile" asp-for="PriceImageFile" placeholder="Fiyat fotoğrafı giriniz " accept=".jpg, .jpeg, .png" onchange="previewImagePrice(this)">
            </div>

            <div class="form-group">
                <label for="PriceUrl">Fiyat Fotoğrafı</label>
                <img id="ImageUrlPreviewPrice" class="form-control" style="width:200px;height:200px">
            </div>

            <div class="form-group">
                <label for="Href">Active</label>
                <input type="text" class="form-control" id="Href" asp-for="Active" placeholder="sadece bir kayıt için active olacak diğer kayıtlar için boş geçilecek">
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light btnConfirm">Slayta Ekle</button>
        </form>

    </div> <!-- end card-body-->
</div>



<script>
    function previewImageProduct(input) {
        console.log("a");
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#ImageUrlPreviewProduct').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
    function previewImagePrice(input) {
        console.log("a");
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#ImageUrlPreviewPrice').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>