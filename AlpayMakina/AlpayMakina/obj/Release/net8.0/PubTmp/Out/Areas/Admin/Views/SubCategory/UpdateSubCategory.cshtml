@model UpdateSubCategoryDto
@{
    ViewData["Title"] = "UpdateSubCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Alt Kategori Düzenleme Ekranı</h4>
        <p class="card-subtitle mb-4">
            Alt Kategori
        </p>

        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="SubCategory">Alt Kategori Adı</label>
                <input type="text" class="form-control" id="SubCategory" asp-for="SubCategory" placeholder="Alt Kategori Adını giriniz">
            </div>
            <div class="form-group">
                <label for="CategoryId">Kategori</label>
                @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.Category,new {@class="form-control"})
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light btnConfirm">Güncelle</button>
        </form>

    </div> <!-- end card-body-->
</div>

