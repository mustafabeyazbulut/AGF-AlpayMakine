@model List<ResultProductDto>


<div class="recommended_items">
    <!--recommended_items-->
    <h2 class="title text-center">ÖNERİLEN</h2>

    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @for (int i = 0; i < Model.Count; i += 3)
            {
                <div class="item @(i == 0 ? "active" : "")">
                    @for (int j = i; j < i + 3 && j < Model.Count; j++)
                    {
                        var product = Model[j];
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        <img style="height:100px;width:100px" src="/Product/@product.ImageUrl" alt="" />
                                        <h2>@String.Format("{0:N2}", @product.Price)</h2>
                                        <p style="overflow:hidden;text-overflow:ellipsis;white-space:nowrap">@product.Title</p>
                                        <a href="/UI/ProductDetail/Index/@product.Id" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Ürün Detayları</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

                   
        </div>
        <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
            <i class="fa fa-angle-left"></i>
        </a>
        <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
            <i class="fa fa-angle-right"></i>
        </a>
    </div>
</div><!--/recommended_items-->