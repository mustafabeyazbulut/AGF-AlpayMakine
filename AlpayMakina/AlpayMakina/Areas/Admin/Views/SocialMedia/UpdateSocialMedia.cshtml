@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Social Media Hesabı Düzenleme Ekranı</h4>
        <p class="card-subtitle mb-4">
            Social Media Hesabını aşağıdan düzenleyebilirsiniz. Icon Görselleri class alanına <a href="https://fontawesome.com/">fontawesome</a> sitesinden ekleme yapabilirsiniz.
        </p>

        <form method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="exampleInputTitle">Özellik</label>
                <input type="text" class="form-control" id="exampleInputTitle" asp-for="IconClass" placeholder="Başlık giriniz">
            </div>
            <div class="form-group">
                <label for="exampleInputDescription">Özellik</label>
                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Href" placeholder="Açıklama giriniz">
            </div>
           
            <button type="submit" class="btn btn-primary waves-effect waves-light btnConfirm">Güncelle</button>
        </form>

    </div> <!-- end card-body-->
</div>

