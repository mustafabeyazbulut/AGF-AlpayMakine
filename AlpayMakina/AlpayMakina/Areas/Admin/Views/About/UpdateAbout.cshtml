@model UpdateAboutDto
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Ürün Düzenleme Ekranı</h4>
        <p class="card-subtitle mb-4">
            Bir ürünün alt Kategorisi var ise Kategori belirtmenize gerek yoktur. Alt Kategorisi olmayan ürünler için Kategori belirtmeniz zorunludur.
        </p>

        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label for="Title">Başlık</label>
                <input type="text" class="form-control" id="Title" asp-for="Title" placeholder="Hakkımızda Başlığını giriniz">
            </div>
            <div class="form-group">
                <label for="ImageFile">Hakkımızda Fotoğrafı</label>
                <input type="file" class="form-control" id="ImageFile" asp-for="ImageFile" accept=".jpg, .jpeg, .png" onchange="previewImage(this)">
            </div>
            <div class="form-group">
                <label for="ImageUrl">Hakkımızda Fotoğrafı</label>
                <img id="ImageUrlPreview" src="~/AboutPhoto/@Model.ImageUrl" class="form-control" style="width:200px;height:200px">
            </div>
            <div class="form-group">
                <label for="Description">Açıklama</label>
                <input type="text" class="form-control" id="Description" asp-for="Description" placeholder="Hakkımızda Açıklamasını giriniz">
            </div>

            <button type="submit" class="btn btn-primary waves-effect waves-light btnConfirm">Güncelle</button>
        </form>

    </div> <!-- end card-body-->
</div>

<script>
    function previewImage(input) {
        console.log("a");
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#ImageUrlPreview').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

